<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>profile</title>
    <link rel="stylesheet" href="../stylesheets/style2.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <form id="uploadpic" action="/upload">
      <input type="file" name="image" id="fileinp">
    </form>
    <div class="container py-3">
      <div class="d-flex">
        <h4 class="mb-4">Profile</h4>
        <p class="mx-3">
          <a id="aa" class="link-opacity-100" href="/feed">Feed</a>
        </p>
        <p class="mx-3">
          <a id="aa" class="link-opacity-90" href="/logout">Logout</a>
        </p>
      </div>
      <div class="flex">
        <div class="pencilcirlce">
          <div class="pencil"><i class="ri-pencil-line"></i></div>
          <div class="image">
            <img src="../public/images/uploads/<%= founderUser.image %>" alt="" />
          </div>
        </div>
        <div>
          <h4 style="text-transform: capitalize"><%= foundUser.username %></h4>
          <h6 style="font-weight: 400; margin-top: -5px">actor</h6>
        </div>
      </div>
      <div class="post mt-4 container-md">
        <h6>Create a new post.</h6>
        <div class="row">
          <div class="col-6">
            <form action="/post" method="post">
              <div class="form-floating">
                <textarea
                  name="post"
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">What's on your mind ?</label>
              </div>
              <button type="submit" class="mt-3 btn btn-primary">
                Create Post
              </button>
            </form>
          </div>
        </div>
      </div>
      <div class="container mt-4">
        <h4 class="mb-4">my post</h4>
        <hr />
        <% foundUser.post.reverse().forEach(function(post){ %>
        <div class="card" style="width: 45rem">
          <div class="card-body">
            <h5 class="card-title"><%= foundUser.username %></h5>
            <p class="card-text"><%= post.data %></p>
            <p style="font-weight: 600" class="text-primary">
              <%= post.likes.length %> Like
            </p>
            <a
              href="/like/<%= post._id %>"
              class="btn <%= post.likes.indexOf(foundUser.id) === -1 ? 'btn-primary' : 'btn-danger' %>"
              ><%= post.likes.indexOf(foundUser.id) === -1 ? "Like" : "Unlike"
              %></a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>

  <script>
    document.querySelector(".pencil")
    .addEventListener("click",function(){
      document.querySelector("#fileinp").click();
    })

    document.querySelector("#fileinp")
    .addEventListener("change",function(){
      document.querySelector('#uploadpic').submit();
    })
  </script>    
  </body>
</html>
